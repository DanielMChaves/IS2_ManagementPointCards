<h1>New Price</h1>
<%= form_for :price, url: prices_path do |f| %>
  <% if @price.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@price.errors.count, "error") %> prohibited
        this client from being saved:
      </h2>
      <ul>
        <% @price.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :status, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :status, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group row">
    <%= f.label :requirement, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :requirement, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group row">
    <%= f.label :lot, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :lot, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :concept, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :concept, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-xs-12">
      <%= f.submit 'Create price', class: 'btn btn-primary' %>
    </div>
  </div>
  
  <%= link_to 'Back', prices_path %>
<% end %>

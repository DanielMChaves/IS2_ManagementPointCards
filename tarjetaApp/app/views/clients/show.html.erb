<h2>Client</h2>

<div class="row">
  <div class="col-xs-12">
    <p>
      <strong>Dni:</strong>
      <%= @client.id %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= @client.name %>
    </p>

    <p>
      <strong>Surname:</strong>
      <%= @client.surname %>
    </p>

    <p>
      <strong>Tlf:</strong>
      <%= @client.tlf %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @client.email %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @client.address %>
    </p>

    <%= link_to 'Edit', edit_client_path(@client) %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-xs-12">
    <h3>Cards of this client</h3>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Points</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <% @client.cards.each do |card| %>
          <tr>
            <td><%= card.id %></td>
            <td><%= card.points %></td>
            <td><%= card.status %></td>
            <td><%= link_to 'Show', card_path(card) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New card', new_client_card_path(client_id: params[:id]) %>
  </div>
</div>

<%= link_to 'Back', clients_path %>

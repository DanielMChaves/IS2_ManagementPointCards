<h1>New Client</h1>
<%= form_for :client, url: clients_path do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@client.errors.count, "error") %> prohibited
        this client from being saved:
      </h2>
      <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :dni, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :id, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :name, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :surname, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :surname, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :tlf, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :tlf, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :address, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-xs-12">
      <%= f.submit 'Create client', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= link_to 'Back', clients_path %>


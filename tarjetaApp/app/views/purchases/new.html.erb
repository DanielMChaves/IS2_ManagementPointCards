<h1>New Purchase</h1>

<%= form_for :purchase, url: card_purchases_path do |f| %>
  <p>
    <%= f.label :id_store%><br>
    <%= f.text_field :id_store %>
  </p>

  <p>
    <%= f.label :buy_date %><br>
    <%= f.text_field :buy_date %>
  </p>

  <p>
    <%= f.label :total %><br>
    <%= f.text_field :total %>
  </p>

  <p>
    <%= f.label :card_id %><br>
    <%= f.text_field :card_id %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', purchases_path %>

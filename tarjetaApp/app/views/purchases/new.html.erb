<h1>New Purchase</h1>

<p>
  <strong>Card ID</strong>
  <%= params[:card_id] %>
</p>
<%= form_for :purchase, url: card_purchases_path do |f| %>
  <div class="form-group row">
    <%= f.label :id_store, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :id_store, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :buy_date, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.date_field :buy_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :total, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :total, class: 'form-control' %>
    </div>
  </div>

  <!--
  <div class="form-group row">
    <%= f.label :card_id, class: 'col-xs-3 col-form-label' %>
    <div class="col-xs-9">
      <%= f.text_field :card_id, class: 'form-control' %>
    </div>
  </div>
  -->

  <div class="form-group">
    <%= f.submit 'Create new purchase', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', purchases_path %>

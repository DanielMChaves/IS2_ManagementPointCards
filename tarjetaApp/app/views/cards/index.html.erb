<h1>Listing cards</h1>
 
<table>
  <tr>
    <th>Card ID</th>
    <th>Points</th>
    <th>Status</th>
    <th>DNI Client</th>
  </tr>
 
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.id %></td>
      <td><%= card.points %></td>
      <td><%= card.status %></td>
      <td><%= card.client_id %></td>
      <td><%= link_to 'Destroy', card_path(card),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<% if params[:client_id] %>
  <%= link_to 'New card', new_client_card_path %>
<% end %>
